#include <stdio.h>
#include <math.h>

// Функція для обчислення дробу
double computeFraction() {
    // Обчислення першого та другого доданків
    double frac1 = sqrt(2 + 2 + pow(2, 2)) / sqrt(3 + 3 + pow(3, 2));
    double frac2 = sqrt(4 + 4 + pow(4, 2)) / sqrt(8 + 8 + pow(8, 2));

    // Повернення результату обчислення
    return frac1 + frac2;
}

int main() {
    
    int choice;
    do{

      printf("Меню:\n");
      printf("1. Обчислити вираз\n");
      printf("2. Вийти\n");
      printf("Введіть ваш вибір: ");

        if (scanf("%d", &choice) != 1){
            printf ("Помилка введення даних. Будь ласка, введіть ціле число.\n");
            while (getchar() != '\n');
            continue;
        }
       // Обчислення значення через змінну computeFraction
       double result = computeFraction();

       // Вивід результату
       if (choice == 1){
       printf("Значення виразу: %.4lf\n", result);
       } else if (choice == 2){
       printf("Вихід...");
       } else {
        printf("Неправильний вибір\n");
       }
        
    } while(choice != 2);

    return 0;
}
